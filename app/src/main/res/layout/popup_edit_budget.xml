<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/popup_margin"
    app:cardBackgroundColor="@color/colorForeground"
    app:cardCornerRadius="@dimen/card_corner_radius">

    <LinearLayout
        android:id="@+id/layout_edit_budget"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/popup_padding">

        <TextView
            android:id="@+id/tv_edit_budget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:textColor="@color/colorText"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_title"
            android:text="Budget" />

        <LinearLayout
            android:id="@+id/row_edit_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_whitespace"
                android:layout_width="@dimen/popup_left_info_size"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"
                android:text="Total" />

            <EditText
                android:id="@+id/et_edit_budget"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/button_edit_budget_cashing"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:stateListAnimator="@animator/animator_button_pressed"
                android:background="@drawable/button_add" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_edit_budget_spent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_edit_budget_spent"
                android:layout_width="@dimen/popup_left_info_size"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"
                android:text="Spent" />

            <EditText
                android:id="@+id/et_edit_budget_spent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/button_edit_budget_reset"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:stateListAnimator="@animator/animator_button_pressed"
                android:background="@drawable/button_reset" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_edit_budget_balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="10dp">

            <TextView
                android:id="@+id/tv_edit_budget_balance_description"
                android:layout_width="@dimen/popup_left_info_size"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"
                android:text="Balance" />

            <TextView
                android:id="@+id/tv_edit_budget_balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_sync"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_sync_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorText"
                android:textSize="@dimen/text_size"
                android:text="Sync with organizer?" />

            <Button
                android:id="@+id/button_edit_budget_sync"
                android:layout_width="@dimen/button"
                android:layout_height="@dimen/button"
                android:layout_marginStart="20dp"
                android:stateListAnimator="@animator/animator_button_pressed"
                android:background="@drawable/button_sync" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/check_edit_budget_is_hidden"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="-5dp"
            android:checked="true"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_size"
            android:text="Hidden (Recommended)" />

        <LinearLayout
            android:id="@+id/row_edit_budget_controller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button_edit_budget_cancel"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:textStyle="bold"
                android:stateListAnimator="@animator/animator_button_pressed_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Cancel" />

            <Button
                android:id="@+id/button_edit_budget_submit"
                android:background="@drawable/button"
                android:textColor="#fff"
                android:textStyle="bold"
                android:stateListAnimator="@animator/animator_button_pressed_easy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="5dp"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:textAllCaps="false"
                android:text="Submit" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>