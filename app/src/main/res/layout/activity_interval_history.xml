<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layout_interval_history"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginVertical="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row_interval_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <Button
                android:id="@+id/button_previous_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="<" />

            <TextView
                android:id="@+id/title_interval_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:text="Interval X" />

            <Button
                android:id="@+id/button_next_interval"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text=">" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_interval_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_budget_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget: " />

            <TextView
                android:id="@+id/tv_budget_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="XX.XX / YYY.YY" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_interval_first_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_first_day_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First day: " />

            <TextView
                android:id="@+id/tv_first_day_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd.mm.yy" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_interval_last_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_last_day_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last day: " />

            <TextView
                android:id="@+id/tv_last_day_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="dd.mm.yy" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row_interval_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="33dp"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_days_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days in interval: " />

            <TextView
                android:id="@+id/tv_days_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Z" />

        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:layout_marginTop="33dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/fragment_container_history" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>